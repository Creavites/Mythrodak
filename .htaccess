DirectoryIndex index.php index.html index.htm index2.html
Options +MultiViews
# Redirects from .php to no .php
RewriteEngine On
RewriteBase /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R,L,NC] 
ErrorDocument 400 https://creavite.org/
ErrorDocument 401 https://creavite.org/
ErrorDocument 403 https://creavite.org/
ErrorDocument 404 https://creavite.org/
ErrorDocument 500 https://creavite.org/
ErrorDocument 503 https://creavite.org/
